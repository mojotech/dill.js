#!/usr/bin/env node

var path        = require('path');
var fs          = require('fs');
var lib         = path.join(path.dirname(fs.realpathSync(__filename)), '../lib');

var updateNotifier = require('update-notifier');
var notifier = updateNotifier({packagePath: '../package.json'});

if (notifier.update) {
    notifier.notify();
}

require(lib + '/pioneer')(lib);
